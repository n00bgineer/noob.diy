datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Post {
  id          String   @id @default(cuid()) // UNIQUE IDENTIFIER FOR EACH POST
  content     String   // CONTENT OF THE POST
  slug        String   @unique // URL-FRIENDLY IDENTIFIER
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(false)
}

model DeletedPost {
  id          String   @id @default(cuid()) // UNIQUE IDENTIFIER FOR EACH DELETED POST
  content     String   // CONTENT OF THE POST
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  slug        String   @unique
  deletedAt   DateTime @default(now()) // WHEN THE POST WAS DELETED (USED FOR 30-DAY EXPIRATION)
}
